if {[info procs test] != "test"} {
    source defs
}

test main-1.1 {StdinProc} {unixOnly} {
    catch {removeFile script}
    set fd [open script w]
    puts $fd {
	close stdin; exit
    }
    close $fd
    if {[catch {exec $tktest <script} msg]} {
	set error 1
    } else {
	set error 0
    }
    list $error $msg
} {0 {}}
