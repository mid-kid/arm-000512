    strace $tracelevel
}

set prms_id 0
set bug_id 0

set testfile "watchpoint"
set srcfile ${testfile}.c
set binfile ${objdir}/${subdir}/${testfile}


if [get_compiler_info ${binfile}] {
    return -1
}

# if we are on HPUX and we are not compiled with gcc, then skip these tests.

